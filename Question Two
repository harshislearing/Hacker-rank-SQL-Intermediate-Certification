SELECT 
    c.customer_name,
    CAST(SUM(i.total_price) AS DECIMAL(10,6)) AS amount_spent
FROM 
    customer c
JOIN 
    invoice i ON c.id = i.customer_id
GROUP BY 
    c.id, c.customer_name
HAVING 
    SUM(i.total_price) <= 0.25 * (
        SELECT AVG(total_price) 
        FROM invoice
    )
ORDER BY 
    amount_spent DESC;
